@model WebApp_Stylo.Models.TaiKhoan
<div class="container">

    <h3>Thêm tài khoản</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.TenDangNhap)
            @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.Label("Mật khẩu")
            @Html.PasswordFor(m => m.MatKhauHash, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.Label("Role")
            @Html.DropDownListFor(
                m => m.Role,
                new SelectList(new[] { "Admin", "Nhân viên", "Khách hàng" }),
                "-- Chọn role --",
                new { @class = "form-control" }
            )
        </div>

        <button type="submit" class="btn btn-success">Lưu</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
    }
</div>