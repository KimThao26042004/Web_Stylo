@model WebApp_Stylo.Models.PhanLoai
<div class="container">

    <h3>Thêm phân loại</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Ten)
            @Html.TextBoxFor(m => m.Ten, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Ten)
        </div>

        <button type="submit" class="btn btn-success">Lưu</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
    }
</div>