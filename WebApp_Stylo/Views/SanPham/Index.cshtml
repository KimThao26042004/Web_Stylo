@model IEnumerable<WebApp_Stylo.Models.SanPham>

@{
    ViewBag.Title = "Danh Sách Sản Phẩm";
}

<div class="container">
    <h2>Danh Sách Sản Phẩm</h2>

    <!-- Tạo nút Thêm sản phẩm -->
    <a href="@Url.Action("Create", "SanPham")" class="btn btn-success">Thêm Sản Phẩm</a>
    <!-- Form Tìm Kiếm -->
    @using (Html.BeginForm("Index", "SanPham", FormMethod.Get))
    {
        <div class="form-group">
            @Html.Label("Tìm kiếm sản phẩm:")
            @Html.TextBox("searchTerm", null, new { @class = "form-control", placeholder = "Nhập tên sản phẩm" })
            <button type="submit" class="btn btn-primary mt-2">Tìm kiếm</button>
        </div>
    }
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th class="index-column">STT</th>
                @*<th>Ảnh</th>*@
                <th>Tên Sản Phẩm</th>
                <th>Mô Tả</th>
                <th>Danh Mục</th>
                <th>Thương Hiệu</th>
                @*<th>Giá</th>*@
                <th>Chức Năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="index-column">@(Model.ToList().IndexOf(item) + 1)</td>

                    <td class="index-column">@item.TenSanPham</td>
                    <td class="index-column">@item.MoTa</td>
                    <td class="index-column">@(item.DanhMuc != null ? item.DanhMuc.Ten : "Không có danh mục")</td>
                    <td class="index-column">@(item.ThuongHieu != null ? item.ThuongHieu.Ten : "Không có thương hiệu")</td>
                    @*<td class="index-column">@item.GiaBan.ToString("C")</td>*@
                    <td class="btn-container">
                        <a href="@Url.Action("Edit", "SanPham", new { id = item.SanPhamID })" class="btn btn-warning btn-sm">Sửa</a>
                        @using (Html.BeginForm("Delete", "SanPham", new { id = item.SanPhamID }, FormMethod.Post, new { onsubmit = "return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                        }
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <!-- Thông báo số trang -->
    <div class="page-info">
        <span>Số trang: @ViewBag.CurrentPage / @ViewBag.TotalPages</span>
        <span>Hiển thị từ @((@ViewBag.CurrentPage - 1) * 10 + 1) đến @Math.Min(@ViewBag.CurrentPage * 10, @ViewBag.TotalPages * 10)</span>
    </div>

    <!-- Phân trang với mũi tên và ô nhập số trang -->
    <div class="pagination">
        <!-- Mũi tên trái -->
        @if (ViewBag.CurrentPage > 1)
        {
            <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })" class="page-link arrow">&#8592;</a>
        }
        else
        {
            <span class="page-link arrow">&#8592;</span>
        }

        <!-- Ô nhập số trang -->
        <form method="get" action="@Url.Action("Index", "SanPham")" class="page-control">
            <input type="number" name="page" value="@ViewBag.CurrentPage" class="page-input" min="1" max="@ViewBag.TotalPages" />
        </form>

        <!-- Mũi tên phải -->
        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })" class="page-link arrow">&#8594;</a>
        }
        else
        {
            <span class="page-link arrow">&#8594;</span>
        }
    </div>
</div>
