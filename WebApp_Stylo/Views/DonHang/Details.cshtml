@model WebApp_Stylo.Models.DonHang
<div class="container">

    <h3>Chi tiết đơn hàng #@Model.DonHangID</h3>

    <hr />

    <h5>Thông tin khách hàng</h5>
    <p><b>Tên:</b> @Model.KhachHang.HoTen</p>
    <p><b>SĐT:</b> @Model.KhachHang.SoDienThoai</p>

    <hr />

    <h5>Thông tin đơn hàng</h5>
    <p><b>Ngày đặt:</b> @Model.NgayDat</p>
    <p><b>Trạng thái:</b> @Model.TrangThai</p>
    <p><b>Tổng tiền:</b> @Model.TongThanhToan.ToString("N0") đ</p>

    <hr />

    <h5>Chi tiết sản phẩm</h5>
    <table class="table table-bordered">
        <tr>
            <th>Sản phẩm</th>
            <th>Biến thể</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
        </tr>

        @foreach (var ct in Model.DonHang_ChiTiet)
        {
            <tr>
                <td>@ct.SanPham_BienThe.SanPham.TenSanPham</td>
                <td>@ct.SanPham_BienThe.SKU</td>
                <td>@ct.SoLuong</td>
                <td>@ct.DonGia.ToString("N0")</td>
            </tr>
        }
    </table>

    <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>

</div>