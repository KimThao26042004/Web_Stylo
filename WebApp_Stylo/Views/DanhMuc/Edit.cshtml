@model WebApp_Stylo.Models.DanhMuc

@{
    ViewBag.Title = "Sửa Danh Mục";
}

<div class="container">

    <div class="edit-page">
        <div class="edit-card">
            <h3 class="card-title">Sửa Danh Mục</h3>

            @using (Html.BeginForm("Edit", "DanhMuc", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.DanhMucID)

                <div class="form-group1">
                    @Html.Label("Tên")
                    @Html.TextBoxFor(m => m.Ten, new { @class = "form-control" })
                </div>

                <div class="form-group1">
                    @Html.Label("Phân loại")
                    @Html.DropDownListFor(
                        m => m.PhanLoaiID,
                        (SelectList)ViewBag.PhanLoaiID,
                        "-- Chọn phân loại --",
                        new { @class = "form-control" }
                    )
                </div>

                <div class="button-row">
                    <button type="submit" class="btn btn-success">Lưu</button>
                    <a href="@Url.Action("Index", "DanhMuc")" class="btn btn-secondary">Quay lại</a>
                </div>
            }
        </div>
    </div>
</div>