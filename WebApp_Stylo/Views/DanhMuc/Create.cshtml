@model WebApp_Stylo.Models.DanhMuc
<div class="container">

    <h3>Thêm danh mục</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Ten)
            @Html.TextBoxFor(m => m.Ten, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.Label("Phân loại")
            @Html.DropDownListFor(
                m => m.PhanLoaiID,
                (SelectList)ViewBag.PhanLoaiID,
                "-- Chọn phân loại --",
                new { @class = "form-control" }
            )
        </div>

        <button type="submit" class="btn btn-success">Lưu</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
    }
</div>